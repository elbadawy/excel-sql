{
	"name": "excel-sql",
	"productName": "excel-sql",
	"version": "0.0.8",
	"description": "Run SQL Query to an excel sheet",
	"license": "MIT",
	"repository": "elbadawy/excel-sql",
	"author": {
		"name": "Ahmad Elbadawy",
		"email": "elbadawy19793@yahoo.com",
		"url": "http://ahmadelbadawy.com"
	},
	"scripts": {
		"postinstall": "electron-builder install-app-deps",
		"start": "electron .",
		"pack": "electron-builder --dir",
		"dist": "electron-builder build -wl --macos --linux --win",
		"release": "np"
	},
	"dependencies": {
		"electron-context-menu": "^0.12.1",
		"electron-debug": "^3.0.0",
		"electron-photon": "^1.1.6",
		"electron-store": "^3.3.0",
		"electron-unhandled": "^2.2.0",
		"electron-updater": "^4.0.6",
		"electron-util": "^0.12.0"
	},
	"devDependencies": {
		"electron": "^9.4.0",
		"electron-builder": "^20.43.0",
		"np": "^5.0.3",
		"xo": "^0.24.0"
	},
	"xo": {
		"envs": [
			"node",
			"browser"
		]
	},
	"np": {
		"publish": false,
		"releaseDraft": false
	},
	"build": {
		"appId": "com.elbadawy.excel-sql",
		"mac": {
			"category": "public.app-category.social-networking",
			"darkModeSupport": true
		},
		"dmg": {
			"iconSize": 160,
			"contents": [
				{
					"x": 180,
					"y": 170
				},
				{
					"x": 480,
					"y": 170,
					"type": "link",
					"path": "/Applications"
				}
			]
		},
		"win": {
			"target": [
				{
					"target": "portable",
					"arch": [
						"ia32"
					]
				}
			]
		},
		"linux": {
			"target": [
				"AppImage",
				"deb"
			],
			"category": "Network;Chat"
		}
	}
}
